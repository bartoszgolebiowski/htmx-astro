---
import PaginationHTMX from "../pages/htmx/pagination.astro";
import { isHXRequest } from "../headers";
import Layout from "../layouts/Layout.astro";

if (isHXRequest(Astro.request)) {
  return Astro.redirect(
    `/htmx/pagination?${Astro.url.searchParams.toString()}`,
    302
  );
}
---

<Layout title="HTMX/Pagination + Astro.build">
  <PaginationHTMX />
</Layout>
